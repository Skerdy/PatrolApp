<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".Activities.VerGjobeActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"

        android:elevation="4dp">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gjobe"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:id="@+id/ver_gjobe_targe"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:text="AA 297 MM"/>

            </LinearLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="20dp"
                >
                <EditText android:id="@+id/ver_gjobe_lloji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="    Lloji i Gjobes" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"

                >
                <EditText android:id="@+id/ver_gjobe_arsyeja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="   Arsyeja" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"

                >
                <EditText android:id="@+id/ver_gjobe_piket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="   Piket e ulura" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                >
                <EditText android:id="@+id/ver_gjobe_vlera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="   Vlera" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="18sp"
                android:id="@+id/data_mbarimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data e pavendosur ende"
                />

            <ImageButton
                android:id="@+id/kalendar"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/ic_icon_gjoba_date_mbarimi"
                />

        </LinearLayout>
</ScrollView>
    </android.support.v7.widget.CardView>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/ver_gjobe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver gjobe"
        style="@style/Base.Widget.AppCompat.Button.Colored"/>

</RelativeLayout>