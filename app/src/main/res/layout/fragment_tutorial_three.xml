<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:src="@drawable/ic_icon_police_grade"
            android:layout_gravity="center_horizontal"/>

    <org.angmarch.views.NiceSpinner
        android:id="@+id/spinner_titull"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Titulli"
        app:backgroundSelector="@drawable/edit_text_selector"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_margin="5dp"/>

        <org.angmarch.views.NiceSpinner
            android:id="@+id/spinner_grada"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Grada"
            app:backgroundSelector="@drawable/edit_text_selector"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="center"
            android:text="Ju lutem plotesoni te dhenat e kerkuara dhe vazhdoni me tej ..."/>
    </LinearLayout>



</RelativeLayout>