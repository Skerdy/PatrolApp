<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_margin="3dp"
        app:cardBackgroundColor="#fff3f3f3">


        <LinearLayout
            android:id="@+id/container"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="4dp"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Pershkrim : "
                    android:textSize="13sp"
                    android:drawableLeft="@drawable/ic_icons_pershkrim_gjobe"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/gjoba_pershkrim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="sdfsdfsdfs"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Arsyeja : "
                    android:textSize="13sp"
                    android:drawableLeft="@drawable/ic_icons_pershkrim_gjobe"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/gjoba_arsyeja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="sdfsdfsdfs"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Lloji i gjobes : "
                    android:textSize="13sp"
                    android:drawableLeft="@drawable/ic_icons_lloji_gjobes"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/gjoba_lloji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Piket e ulura :  "
                    android:drawableLeft="@drawable/ic_icons_piket_ulura"
                    android:textSize="13sp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/gjoba_piket_ulur"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="1"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/paguar"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:text="PAPAGUAR"/>
            </LinearLayout>

        </LinearLayout>



        <!-- CONTENT -->

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>